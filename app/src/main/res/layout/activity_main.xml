<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.deep.paintgame.MainActivity">

    <Button
        android:id="@+id/button_main_StartGame"
        android:layout_width="167dp"
        android:layout_height="55dp"
        android:layout_marginBottom="32dp"
        android:text="开始游戏"
        app:layout_constraintBottom_toTopOf="@+id/button_main_ManageProblem"
        app:layout_constraintDimensionRatio="h,"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_main_ManageProblem"
        android:layout_width="167dp"
        android:layout_height="52dp"
        android:layout_marginBottom="32dp"
        android:text="管理题目库"
        app:layout_constraintBottom_toTopOf="@+id/button_main_Settings"
        app:layout_constraintDimensionRatio="h,"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_main_GameHelp"
        android:layout_width="167dp"
        android:layout_height="51dp"
        android:layout_marginBottom="80dp"
        android:text="游戏帮助"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="h,"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_main_Settings"
        android:layout_width="167dp"
        android:layout_height="51dp"
        android:layout_marginBottom="32dp"
        android:text="游戏设置"
        app:layout_constraintBottom_toTopOf="@id/button_main_GameHelp"
        app:layout_constraintDimensionRatio="h,"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent" />

    <CheckedTextView
        android:id="@+id/text_main_Title"
        android:layout_width="232dp"
        android:layout_height="64dp"
        android:layout_marginBottom="246dp"
        android:layout_marginTop="58dp"
        android:text="绘图游戏"
        android:textAlignment="center"
        android:textSize="42sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/button_main_GameHelp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

</android.support.constraint.ConstraintLayout>
