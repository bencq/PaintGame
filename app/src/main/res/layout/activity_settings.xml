<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.deep.paintgame.SettingsActivity">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        >

    <LinearLayout
        android:id="@+id/linearLayout_SA_defaultMusic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

            <RadioGroup
                android:id="@+id/radioGroup_SA_music"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    android:text="music"
                    />

                <RadioButton
                    android:id="@+id/radioButton_SA_music1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    />

                <RadioButton
                    android:id="@+id/radioButton_SA_music2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    />

                <RadioButton
                    android:id="@+id/radioButton_SA_music3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    />


                <Switch
                    android:id="@+id/switch_SA_music"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

            </RadioGroup>



            <!--View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ff000000"
                /-->


            <LinearLayout
                android:id="@+id/linearLayout_SA_otherMusic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

            </LinearLayout>

    </LinearLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>
